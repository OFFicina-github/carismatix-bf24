<div class="container">
<!-- Tab links -->
<div class="tab">
    <button class="tablinks" onclick="openCity(event, 'Descrizione')">Descrizione</button>
    <button class="tablinks" onclick="openCity(event, 'Specifiche_tecniche')">Specifiche tecniche</button>
</div>

<!-- Tab content -->
<div id="Descrizione" class="tabcontent">
    {% if section.settings.titolo-scheda1 != blank %}
    <h3>{{ section.settings.titolo-scheda1 }}</h3>
    {% endif %}
    {% if section.settings.descrizione-scheda1 != blank %}
    <p>{{ section.settings.descrizione-scheda1 }}</p>
    {% endif %}
</div>

<div id="Specifiche_tecniche" class="tabcontent">
    {% if section.settings.titolo-scheda2 != blank %}
    <h3>{{ section.settings.titolo-scheda2 }}</h3>
    {% endif %}
    {% if section.settings.descrizione-scheda2 != blank %}
    <p>{{ section.settings.descrizione-scheda2 }}</p>
    {% endif %}
</div>
</div>


<!-- Tab section ends -->
{% schema %}
{
"name": "Tabs_custom",
"settings": [
{
"id": "titolo-scheda1",
"type": "text",
"label": "Titolo scheda 1"
},
{
"id": "descrizione-scheda1",
"type": "richtext",
"label": "Descrizione scheda 1"
},
{
"id": "titolo-scheda2",
"type": "text",
"label": "Titolo scheda 2"
},
{
"id": "descrizione-scheda2",
"type": "richtext",
"label": "Descrizione scheda 2"
}
],
"presets": [
{
"name": "Tabs Custom",
"category": "ADVANCED LAYOUT"
}
]
}
{% endschema %}

{% stylesheet %}
.tabcontent {
animation: fadeEffect 1s; /* Fading effect takes 1 second */
}

/* Go from zero to full opacity */
@keyframes fadeEffect {
from {opacity: 0;}
to {opacity: 1;}
}
/* Style the tab */
.tab {
overflow: hidden;
border: 1px solid #ccc;
background-color: #f1f1f1;
}

/* Style the buttons that are used to open the tab content */
.tab button {
background-color: inherit;
float: left;
border: none;
outline: none;
cursor: pointer;
padding: 14px 16px;
transition: 0.3s;
}

/* Change background color of buttons on hover */
.tab button:hover {
background-color: #ddd;
}

/* Create an active/current tablink class */
.tab button.active {
background-color: #ccc;
}

/* Style the tab content */
.tabcontent {
display: none;
padding: 6px 12px;
border: 1px solid #ccc;
border-top: none;
}
{% endstylesheet %}

