{% capture subcategory_area %}
{% assign current_collection_handle = collection.handle %}
{% assign menu_filtri = linklists['menu-fittizio'].links %}
{% render 'off_breadcrumbs' %}	
	<div class="freccia_mobile">â†’</div>
	<div class="subcategory-area">
	{% if current_collection_handle == 'all' %}
		{% for livello_1 in menu_filtri %}
		<a class="button subcategory-btn body-default" href="{{ livello_1.url }}">{{ livello_1.title }}</a>
		{% endfor %}
	{% else %}
		{% for livello_1 in menu_filtri %}
		{% if livello_1.object.handle == current_collection_handle %}
			{% if livello_1.links %}
			{% for livello_2 in livello_1.links %}
				<a class="button subcategory-btn body-default" href="{{ livello_2.url }}">{{ livello_2.title }}</a>
			{% endfor %}
			{% endif %}
		{% else %}
			{% if livello_1.links %}
			{% for livello_2 in livello_1.links %}
				{% if livello_2.object.handle == current_collection_handle %}
				{% if livello_2.links %}
					{% for livello_3 in livello_2.links %}
					<a class="button subcategory-btn body-default" href="{{ livello_3.url }}">{{ livello_3.title }}</a>
					{% endfor %}
				{% endif %}
				{% endif %}
			{% endfor %}
			{% endif %}
		{% endif %}
		{% endfor %}
	{% endif %}
	{% if current_collection_handle != 'all'%}
		<a class="button subcategory-btn body-default all_prod" href="/collections/tutti-i-prodotti">TUTTI I PRODOTTI</a>
	{% endif %}
	</div>
{% endcapture %}

